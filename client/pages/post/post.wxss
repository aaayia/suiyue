/* pages/post/post.wxss */

.container {
  height: 100;
}

.banner-container {
  width: 100%;
  height: 450rpx;
}

.banner {
  background-color: #d3d3d3;
  width: 100%;
  height: 100%;
}

.banner-desc {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10rpx;
  color: #703200;
  height: 100rpx;
}

.banner-desc text{
  color: rgba(255, 255, 255, 0.8);
  font-size: 27rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
    position: relative;

}

.cell {
  margin: 10rpx 20rpx 20rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.cell-top-view {
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cell-top-view text {
  height: 50rpx;
  font-family: 'Courier New';
  color: #000;
  opacity: 0.6;
  font-size: 50rpx;
}

.cell-image {
  height: 400rpx;
  width: 95%;
  margin: 10rpx 20rpx 20rpx 20rpx;
}

.cell-bottom-view {
  display: flex;
  flex-direction: column;
}

.cell-bottom-view text {
  color: #808080;
  font-size: 27rpx;
  text-align: center;
  line-height: 45rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
}
